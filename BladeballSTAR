-- Start
starterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, true)

runService.RenderStepped:Connect(function()
    if not workspace:FindFirstChildOfClass("Sound") then
        audioLoop()
    end
end)

audioLoop()
moderationPrank()
