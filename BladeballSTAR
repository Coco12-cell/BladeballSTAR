-- suck
local function chatTroll()
    for i = 1, 4 do
        replicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(
            "hey everyone im using bladeball hacks ü•∑üèøü•Äüíî", "All"
        )
    end
